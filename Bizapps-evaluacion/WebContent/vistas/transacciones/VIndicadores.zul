<zk>
<window border = "normal" height="auto" width="auto" style="background-color:#8A0808;" apply="controlador.transacciones.CIndicadores">
		<div  style="background-color:#F8E0E0;" >
			<label value= "Evaluación de Desempeño" style= "font-weight:bold;"/>
		</div>
				<grid width="100%" align = "center">
					<columns visible="true" >
						<column label="#Evaluacion" width="13%" style = "font-size: 10px;"/>
						<column label="Fecha Creacion" width="22%" style = "font-size: 10px;" />
						<column label="Revision" width="14%" style = "font-size: 10px;" />
						<column label="Ficha" width="10%"  style = "font-size: 10px;" />
						<column label="Nombre del Trabajador" width="25%" style = "font-size: 10px;" />
						<column label="Cargo" width="20%" style = "font-size: 10px;" />
						<column label="Unidad Organizativa" width="27%" style = "font-size: 10px;" />
						<column label="Gerencia a la que Reporta" width="25%" style = "font-size: 10px;" />
					</columns>
					<rows>
					<row>
								<label id="lblEvaluacion" style = "font-size: 10px;"></label>
								<label id="lblFechaCreacion" style = "font-size: 10px;"></label>
								<label id="lblRevision" style = "font-size: 10px;"></label>
								<label id="lblFicha" style = "font-size: 10px;"></label>
								<label id="lblNombreTrabajador" style = "font-size: 10px;"></label>
								<label id="lblCargo" style = "font-size: 10px;"></label>
								<label id="lblUnidadOrganizativa" style = "font-size: 10px;"></label>
								<label id="lblGerencia" style = "font-size: 10px;"></label>
						</row>
					</rows>
				</grid>
		<separator />
		<div style="background-color:#F8E0E0;" >
		<label value= "Sección I - Evaluación de Indicadores" style= "font-weight:bold;"/>
		</div>
		<separator />
		<groupbox>
		<grid>
			<columns>
				<column label="" width="50%" />
				<column label="" width="50%" />
			</columns>
			<rows>
				<row>
					<label id="lblobjetivos" value="Seleccione un Objetivo para agregar/ Ver sus Indicadores :" />
					<combobox  id="cmbObjetivos" readonly="true"
						placeholder = "Seleccione..."
						width="100%" cols="45" tabindex="1" mold="rounded">
						<template name="model">
							<comboitem context = "${each.idObjetivo}"
							label="${each.descripcionObjetivo}" />
						</template>
					</combobox>
				</row>

			</rows>
		</grid>
	</groupbox>
	<groupbox id = "gpxAgregar">
		<listbox height="auto" id="lbxAgregarIndicador" mold="paging"
				pageSize="10" width="auto">
				<listhead>
					<listheader label="Línea" width = "5%"/>
					<listheader label="Indicador "  width = "23%"/>
					<listheader label="Unid. Med." width = "9%"/>
					<listheader label="Medición" width = "14%"/>
					<listheader label="Peso (%)"  width = "7%" />
					<listheader label="Valor Meta"  width = "9%"/>
					<listheader label="Valor Resultado"  width = "12%" />
					<listheader label="Res.Fy.Ant."  width = "9%"/>
					<listheader label="Resultado (%)"  width = "12%"/>
					<listheader label="Resul. Peso (%)"  width = "12%"/>
					<listheader   width = "7%"/>
				</listhead>
					<listitem>
						<listcell label="1"></listcell>
						<listcell> 
						<textbox  placeholder = "Indicador" mold="rounded"  rows="2" width = "100%" id = "txtIndicador"/>
						</listcell>
						<listcell> 
						<combobox placeholder="Seleccione..."
								mold="rounded" rows="1" width="100%"
								style="background-color:white;border:none" readonly="true"
								id="cmbUnidad">
								<template name="model">
									<comboitem context="${each.idUnidad}"
										label="${each.descripcion}" />
								</template>
							</combobox>
						</listcell>
						<listcell> 
						<combobox placeholder="Seleccione..."
								mold="rounded" rows="1" width="100%"
								style="background-color:white;border:none" readonly="true"
								id="cmbMedicion">
								<template name="model">
									<comboitem context="${each.idMedicion}"
										label="${each.descripcionMedicion}" />
								</template>
							</combobox>
						</listcell>
						<listcell> 
						<spinner  placeholder = "Peso %" mold="rounded"   width = "100%" id = "txtPeso" constraint = "min 0"/>
						</listcell>
						<listcell> 
						<spinner  placeholder = "Valor Meta" mold="rounded"   width = "100%" id = "txtValorMeta" constraint = "min 0" />
						</listcell>
						<listcell> 
						<spinner  placeholder = "Valor Resultado" mold="rounded"   width = "100%" id = "txtValorResultado" constraint = "min 0"/>
						</listcell>
						<listcell> 
						<spinner  placeholder = "Res.Fy.Ant" mold="rounded"   width = "100%" id = "txtResFy" constraint = "min 0"/>
						</listcell>
						<listcell> 
						<spinner  placeholder = "Resultado %" mold="rounded"   width = "100%" id = "txtResultadoPorc" constraint = "min 0"/>
						</listcell>
						<listcell> 
						<spinner placeholder = "Resultado peso %" mold="rounded"   width = "100%" id = "txtPesoPorc" constraint = "min 0"/>
						</listcell>
						<listcell>
							<button id="btnOk" width="auto"
								height="auto" mold="trendy"
								image="/public/imagenes/botones/seleccionar.png"
								style="background-color:#F8E0E0;">
							</button>
						</listcell>
					</listitem>
			</listbox>
		</groupbox>
		<div align="right" height="100%">
			<button id="btnAgregar" width="auto" height="auto"
				mold="trendy" label="Agregar"  image="/public/imagenes/botones/agregar.png" >
			</button>
			<button id="btnEliminar" width="auto" height="auto"  image="/public/imagenes/botones/eliminar.png" 
				mold="trendy" label="Eliminar" onClick="@command('cancelar')">
			</button>
		</div>
<groupbox id = "gpxAgregados">
		<listbox height="auto" id="lbxAgregados" mold="paging"
				pageSize="10"  width="auto">
				<listhead>
					<listheader label="Línea" width = "5%"/>
					<listheader label="Indicador "  width = "25%"/>
					<listheader label="Unid. Med." width = "9%"/>
					<listheader label="Medición" width = "11%"/>
					<listheader label="Peso (%)"  width = "9%" />
					<listheader label="Valor Meta"  width = "9%"/>
					<listheader label="Valor Resultado"  width = "12%" />
					<listheader label="Res.Fy.Ant."  width = "9%"/>
					<listheader label="Resultado (%)"  width = "10%"/>
					<listheader label="Resul. Peso (%)"  width = "12%"/>
				</listhead>
				<template name="model">
					<listitem>
						<listcell label="${each.linea}"></listcell>
						<listcell label="${each.descripcionIndicador}"></listcell>
						<listcell label="${each.unidadMedida.descripcion}"></listcell>
						<listcell label="${each.medicion.descripcionMedicion}"></listcell>
						<listcell label="${each.peso}"></listcell>
						<listcell label="${each.valorMeta}"></listcell>
						<listcell label="${each.valorResultado}"></listcell>
						<listcell label="${each.resultadoFyAnterior}"></listcell>
						<listcell label="${each.resultadoPeso}"></listcell>
						<listcell label="${each.resultadoPorc}"></listcell>
					</listitem>
				</template>
			</listbox>
		</groupbox>	
</window>
</zk>